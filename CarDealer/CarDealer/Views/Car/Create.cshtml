@model Car
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid">
    <div class="row">

        <!--tytuł-->
        <div class="col-sm-12">
            <h2>Dodaj samochód</h2>
            <hr />
        </div>

        <!--zdjęcie-->
        <div class="col-sm-6">
            <form method="post" enctype="multipart/form-data" asp-action="uploadFile">

                <!--załaduj zdjęcie-->
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                    <label class="control-label">Zdjęcie samochodu</label><br />
                    <img src="@ViewBag.ImgPath" height="300" width="300" /><br />
                    <input type="file" name="file" style="margin-top:10px" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Załaduj zdjęcie" class="btn btn-primary" />
                </div>

            </form>

        </div>

        <!--tytuł i opis-->
        <div class="col-sm-6">

            <!--tytuł, opis, -->
            <!--dodaj samochód, powrot-->

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!--tytuł-->
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Tytuł ogłoszenia</label>
                    <input asp-for="Title" class="form-control" placeholder="Wpisz tytuł ogłoszenia"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!--opis-->
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="10" placeholder="Opisz samochód"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="PhotoUrl" value="@ViewBag.ImgPath" />
                <input type="hidden" asp-for="MiniaturePhotoUrl" value="@ViewBag.ImgPath" />



                <div class="form-group">
                    <input type="submit" value="Dodaj samochód" class="btn btn-success" style="margin-top:30px" />
                    <a asp-action="Index" class="btn btn-danger pull-right" style="margin-top:30px">Powrót</a>
                </div>


            </form>

        </div>


    </div>
</div>

