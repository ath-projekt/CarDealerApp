@model Car
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers 

<h2>Edytuj samochód</h2>

<hr />

<div class="row">
    
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="uploadFile">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <label class="control-label">Zdjęcie samochodu</label><br />
                <img src="@ViewBag.ImgPath" height="300" width="300" /><br />
                <input type="file" name="file" style="margin-top:10px" />
            </div>
            <div class="form-group">
                <input type="submit" value="Załaduj zdjęcie" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="col-md-4">            
            
            <input type="hidden" asp-for="PhotoUrl" value="@ViewBag.ImgPath" />
            <input type="hidden" asp-for="MiniaturePhotoUrl" value="@ViewBag.ImgPath" />                       
            
            <div class="form-group">
                <input type="submit" value="Edytuj samochód" class="btn btn-success" style="margin-top:30px" />
                <a asp-action="Index" class="btn btn-danger pull-right" style="margin-top:30px">Powrót</a>
            </div>
        </div>
    </form>
</div>
