@model Car
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers 

<div class="container-fluid">
    <div class="row">

        <!--tytuł-->
        <div class="col-sm-12">
            <h2>Edytuj samochód</h2>
            <hr />
        </div>

        <!--zdjęcie-->
        <div class="col-sm-6">
            <form method="post" enctype="multipart/form-data" asp-action="uploadFile">

                <!--załaduj zdjęcie-->
                <div class="form-group">
                    <div class="form-group">
                        <!--zdjęcie-->
                        <input type="hidden" asp-for="Id" />
                        <label class="control-label">Zdjęcie samochodu</label><br />
                        <img alt="CarPhoto" src="@ViewBag.ImgPath" height="400" width="500" />
                    </div>

                    <div class="form-group">
                        <!--załaduj zdjęcie-->
                        <label for="exampleFormControlFile1">Wybierz zdjęcie</label>
                        <input asp-for="PhotoUrl" type="file" class="form-control-file">

                        <div class="form-group">
                            <input type="submit" value="Załaduj" class="btn btn-primary" />
                        </div>
                    </div>
                </div>

            </form>



        </div>

        <!--tytuł i opis-->
        <div class="col-sm-6">

            <!--tytuł, opis, -->
            <!--dodaj samochód, powrot-->

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <!--tytuł-->
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Tytuł ogłoszenia</label>
                    <input asp-for="Title" class="form-control" placeholder="@Model.Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!--opis-->
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="10" placeholder="@Model.Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="PhotoUrl" value="@ViewBag.ImgPath" />
                <input type="hidden" asp-for="MiniaturePhotoUrl" value="@ViewBag.ImgPath" />



                <div class="form-group">
                    <input type="submit" value="OK" class="btn btn-success" style="margin-top:30px" />
                    <a asp-action="Index" class="btn btn-danger pull-right" style="margin-top:30px">Powrót</a>
                </div>


            </form>

        </div>


    </div>
</div>


