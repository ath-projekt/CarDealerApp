@model IEnumerable<Car>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<table class="table" style="background-color:azure">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Opis</th>
            <th>Miniaturka</th>
            <th>
                <a asp-action="Create" class="btn btn-danger btn-sm">Dodaj nowy</a>
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td><img src="@item.MiniaturePhotoUrl" height="100" width="100" /></td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm" style="margin-bottom:3px">Szczegoly</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm" style="margin-bottom:3px">Edytuj</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-success btn-sm" style="margin-bottom:3px">Usuń</a>
            </td>
        </tr>
        }
    </tbody>

</table>